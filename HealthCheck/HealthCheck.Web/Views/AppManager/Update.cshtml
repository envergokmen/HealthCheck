@model HealthCheck.Models.DTOs.TargetApps.UpdateTargetAppDto

@{
    ViewData["Title"] = "Update";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Modif an app</li>
    </ol>
</nav>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>


            <div class="form-group">

                <label asp-for="IntervalType" class="control-label"></label>
                <div class="btn-group mr-2" role="group" id="IntervalTypeGroup">
                    <label class="btn @(Model.IntervalType== HealthCheck.Models.IntervalType.Minutely?"btn-primary":"btn-secondary")">
                        Minutely
                        <input name="IntervalType" type="radio" value="Minutely" data-max="60" @(Model.IntervalType == HealthCheck.Models.IntervalType.Minutely ? "checked" : "") />
                    </label>
                    <label class="btn @(Model.IntervalType== HealthCheck.Models.IntervalType.Hourly?"btn-primary":"btn-secondary")">
                        Hourly
                        <input name="IntervalType" type="radio" value="Hourly" data-max="23" @(Model.IntervalType == HealthCheck.Models.IntervalType.Hourly ? "checked" : "") />
                    </label>
                    <label class="btn @(Model.IntervalType== HealthCheck.Models.IntervalType.Daily?"btn-primary":"btn-secondary")">
                        Daily
                        <input name="IntervalType" type="radio" value="Daily" data-max="31" @(Model.IntervalType == HealthCheck.Models.IntervalType.Daily ? "checked" : "") />
                    </label>
                    <label class="btn @(Model.IntervalType== HealthCheck.Models.IntervalType.Monthly?"btn-primary":"btn-secondary")">
                        Monthly
                        <input name="IntervalType" type="radio" value="Monthly" data-max="11" @(Model.IntervalType == HealthCheck.Models.IntervalType.Monthly ? "checked" : "") />
                    </label>
                </div>

            </div>


            <div class="form-group">
                <label asp-for="IntervalValue" class="control-label"></label>
                <input asp-for="IntervalValue" class="form-control" placeholder="IntervalValue" min="1" max="30" />
                <span asp-validation-for="IntervalValue" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

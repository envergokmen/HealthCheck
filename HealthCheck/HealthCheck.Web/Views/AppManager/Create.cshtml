@model HealthCheck.Models.DTOs.TargetApps.CreateTargetAppDto

@{
    ViewData["Title"] = "Create";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add Target App to Track</li>
    </ol>
</nav>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" placeholder="Url" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>

        <div class="form-group">

            <label asp-for="IntervalType" class="control-label"></label>
            <div class="btn-group mr-2" role="group" id="IntervalTypeGroup">
                <label class="btn btn-primary">
                    Minutely
                    <input name="IntervalType" type="radio" value="Minutely" checked data-max="60" />
                </label>
                <label class="btn btn-secondary">
                    Hourly
                    <input name="IntervalType" type="radio" value="Hourly" data-max="23" />
                </label>
                <label class="btn btn-secondary">
                    Daily
                    <input name="IntervalType" type="radio" value="Daily" data-max="31" />
                </label>
                <label class="btn btn-secondary">
                    Monthly
                    <input name="IntervalType" type="radio" value="Monthly" data-max="11" />
                </label>
            </div>

        </div>

            <div class="form-group">
                <label asp-for="IntervalValue" class="control-label"></label>
                <input asp-for="IntervalValue" class="form-control" placeholder="IntervalValue" min="1" max="30"/>
                <span asp-validation-for="IntervalValue" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-10">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
